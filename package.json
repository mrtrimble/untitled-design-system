{
  "name": "@mrtrimble/design-system",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "files": [
    "/dist",
    "/lib",
    "/src",
    "/README.md",
    "/style-dictionary.config.json",
    "/tsconfig.json",
    "/index.html",
    "/package.json",
    "/vite-dev.config.ts",
    "/vite-lib.config.ts",
    "/vite.config.ts"
  ],
  "scripts": {
    "vite:dev": "vite --config ./vite-dev.config.ts",
    "vite:build": "tsc && vite build --config ./vite.config.ts",
    "vite:lib": "tsc && vite build --config ./vite-lib.config.ts",
    "vite:preview": "vite preview",
    "sass:watch": "sass --watch src/styles/scss/:src/styles/css/",
    "sass:build": "sass src/styles/scss/:src/styles/css/",
    "style-dictionary:clean": "style-dictionary clean --config ./style-dictionary.config.json",
    "style-dictionary:build": "style-dictionary build --config ./style-dictionary.config.json",
    "svgo:optimize": "svgo -f ./src/icons -o ./public/icons",
    "pack": "npm pack",
    "build": "run-s style-dictionary:build svgo:optimize sass:build vite:build",
    "build:lib": "run-s style-dictionary:build svgo:optimize sass:build vite:lib pack",
    "start": "npm run style-dictionary:build && run-p vite:dev"
  },
  "devDependencies": {
    "@acab/reset.css": "^0.8.0",
    "browserslist": "^4.22.2",
    "lightningcss": "^1.22.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.5",
    "style-dictionary": "^3.9.1",
    "svgo": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-svg-sprite": "^0.5.1",
    "vite-svg-sprite-wrapper": "^1.3.0"
  },
  "dependencies": {
    "@types/node": "^20.10.5",
    "path": "^0.12.7"
  }
}
